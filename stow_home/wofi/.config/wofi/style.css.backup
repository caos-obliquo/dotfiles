* {
    font-family: Monospace;
    font-size: 14pt;
}

window {
    background-color: #000000;
    border: 1px solid #000000;
    border-radius: 0px;
}

#input {
    background-color: #000000;
    border: 1px solid #333333;
    color: #ffffff;
    border-radius: 0px;
    padding: 10px;
    margin: 5px;
    font-size: 14pt;
}

#inner-box {
    background-color: #000000;
    border: none;
}

#outer-box {
    background-color: #000000;
    border: none;
}

#scroll {
    background-color: #000000;
    border: none;
}

#text {
    color: #ffffff;
    padding: 8px;
    font-size: 16pt;
    line-height: 1.2;
}

#entry {
    background-color: #000000;
    color: #ffffff;
    border: none;
    padding: 10px;
    font-size: 16pt;
    line-height: 1.2;
    min-height: 30px;
}

#entry:selected {
    background-color: #333333;
    color: #ffffff;
    border: 1px solid #000000;
}

#entry:hover {
    background-color: #333333;
    color: #ffffff;
}
